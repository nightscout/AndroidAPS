        <app.aaps.core.validators.AdaptiveUnitPreference
            android:dialogMessage="@string/lgs_threshold_summary"
            android:key="@string/key_dynamic_isf_lgs_threshold"
            android:title="@string/lgs_threshold_title" />

        <app.aaps.core.keys.AdaptiveSwitchPreference
            android:key="@string/key_dynamic_isf_adjust_sensitivity"
            android:summary="@string/dynisf_adjust_sensitivity_summary"
            android:title="@string/dynisf_adjust_sensitivity" />

        <app.aaps.core.keys.AdaptiveSwitchPreference
            android:dependency="@string/key_dynamic_isf_adjust_sensitivity"
            android:key="@string/key_openaps_sensitivity_raises_target"
            android:summary="@string/sensitivity_raises_target_summary"
            android:title="@string/sensitivity_raises_target_title" />

        <app.aaps.core.keys.AdaptiveSwitchPreference
            android:dependency="@string/key_dynamic_isf_adjust_sensitivity"
            android:key="@string/key_openaps_resistance_lowers_target"
            android:summary="@string/resistance_lowers_target_summary"
            android:title="@string/resistance_lowers_target_title" />

        <app.aaps.core.keys.AdaptiveSwitchPreference
            android:key="@string/key_openaps_use_smb"
            android:summary="@string/enable_smb_summary"
            android:title="@string/enable_smb" />

        <app.aaps.core.keys.AdaptiveSwitchPreference
            android:dependency="@string/key_openaps_use_smb"
            android:key="@string/key_openaps_allow_smb_with_high_temp_target"
            android:summary="@string/enable_smb_with_high_temp_target_summary"
            android:title="@string/enable_smb_with_high_temp_target" />

        <app.aaps.core.keys.AdaptiveSwitchPreference
            android:dependency="@string/key_openaps_use_smb"
            android:key="@string/key_openaps_enable_smb_always"
            android:summary="@string/enable_smb_always_summary"
            android:title="@string/enable_smb_always" />

        <app.aaps.core.keys.AdaptiveSwitchPreference
            android:dependency="@string/key_openaps_use_smb"
            android:key="@string/key_openaps_allow_smb_with_COB"
            android:summary="@string/enable_smb_with_cob_summary"
            android:title="@string/enable_smb_with_cob" />

        <app.aaps.core.keys.AdaptiveSwitchPreference
            android:dependency="@string/key_openaps_use_smb"
            android:key="@string/key_openaps_allow_smb_with_low_temp_target"
            android:summary="@string/enable_smb_with_temp_target_summary"
            android:title="@string/enable_smb_with_temp_target" />

        <app.aaps.core.keys.AdaptiveSwitchPreference
            android:dependency="@string/key_openaps_use_smb"
            android:key="@string/key_openaps_enable_smb_after_carbs"
            android:summary="@string/enable_smb_after_carbs_summary"
            android:title="@string/enable_smb_after_carbs" />

        <app.aaps.core.validators.AdaptiveIntPreference
            android:key="@string/key_openaps_smb_interval"
            android:title="@string/smb_interval_summary" />

        <app.aaps.core.validators.AdaptiveIntPreference
            android:key="@string/key_openaps_smb_max_minutes"
            android:title="@string/smb_max_minutes_summary" />

        <app.aaps.core.validators.AdaptiveIntPreference
            android:dialogMessage="@string/uam_smb_max_minutes"
            android:key="@string/key_openaps_uam_smb_max_minutes"
            android:title="@string/uam_smb_max_minutes_summary" />

        <app.aaps.core.keys.AdaptiveSwitchPreference
            android:key="@string/key_openaps_use_uam"
            android:summary="@string/enable_uam_summary"
            android:title="@string/enable_uam" />

