<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:validate="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:key="@string/key_absorption_cutoff"
        android:title="@string/equil_settings"
        app:initialExpandedChildrenCount="1">
        <info.nightscout.androidaps.utils.textValidator.ValidatingEditTextPreference
            android:digits="0123456789ABCDEF"
            android:inputType="numberPassword"
            android:key="@string/key_equil_pair_password"
            android:title="@string/equil_password_title"
            validate:customRegexp="@string/fourhexanumber"
            validate:testErrorString="@string/error_mustbe4hexadidits"
            validate:testType="regexp" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/key_equil_alarm_battery"
            android:title="@string/equil_settings_alarm_battery" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/key_equil_alarm_insulin"
            android:title="@string/equil_settings_alarm_insulin" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>
