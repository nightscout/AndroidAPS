<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollingactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?android:attr/windowBackground"
    tools:context="info.nightscout.androidaps.plugins.general.themeselector.ScrollingActivity">

    <include layout="@layout/themeselector_text_fragment" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="8dp"
        app:layout_anchorGravity="bottom|end"
        android:src="@drawable/ic_aaps_logo_white"
        android:tint="?android:attr/colorBackground"
        app:elevation="12dp"
        app:borderWidth="2dp"
        app:backgroundTint="?attr/colorSecondary"
        android:backgroundTint="?attr/colorSecondary"
        android:background="?attr/colorSecondary"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:onClick="onClick">
        <requestFocus/>
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <!-- include bottom sheet -->
    <include layout="@layout/themeselector_bottom_sheet" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
